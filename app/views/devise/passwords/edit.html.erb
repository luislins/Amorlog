<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center py-16 px-6">
  <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-lg">
    <!-- Título -->
    <h2 class="text-3xl font-bold text-center text-loveRed mb-6">Alterar sua Senha</h2>

    <!-- Mensagem de Introdução -->
    <p class="text-gray-300 text-center mb-6">
      Insira sua nova senha e confirme para redefini-la.
    </p>

    <!-- Formulário -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-6") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- Campo de Nova Senha -->
      <div class="flex flex-col">
        <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-gray-400 mb-1">(Mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo de Confirmação de Senha -->
      <div class="flex flex-col">
        <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Botão de Alteração -->
      <div class="text-center mt-4">
        <%= f.submit "Alterar Senha", 
              class: "bg-loveRed text-white px-6 py-3 rounded-md font-semibold hover:bg-red-600 shadow-lg transition-transform transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>
