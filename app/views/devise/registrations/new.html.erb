<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center">
  <div class="bg-gradient-to-br from-loveRed via-red-600 to-red-800 p-8 rounded-2xl shadow-2xl w-full max-w-lg">
    <h2 class="text-4xl font-extrabold mb-6 text-center text-white">Registrar-se</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-6" do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo para Email -->
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-semibold text-white mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "mt-1 w-full rounded-lg border-gray-300 shadow-md focus:ring-loveRed focus:border-loveRed text-black px-4 py-2" %>
      </div>

      <!-- Campo para Senha -->
      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-semibold text-white mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-gray-300">(mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "mt-1 w-full rounded-lg border-gray-300 shadow-md focus:ring-loveRed focus:border-loveRed text-black px-4 py-2" %>
      </div>

      <!-- Campo para Confirmação de Senha -->
      <div>
        <%= f.label :password_confirmation, "Confirmação da Senha", class: "block text-sm font-semibold text-white mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "mt-1 w-full rounded-lg border-gray-300 shadow-md focus:ring-loveRed focus:border-loveRed text-black px-4 py-2" %>
      </div>

      <!-- Campo para Nome do Parceiro 1 -->
      <div>
        <%= f.label :partner_1, "Nome do Parceiro 1", class: "block text-sm font-semibold text-white mb-1" %>
        <%= f.text_field :partner_1, required: true, 
              class: "mt-1 w-full rounded-lg border-gray-300 shadow-md focus:ring-loveRed focus:border-loveRed text-black px-4 py-2" %>
      </div>

      <!-- Campo para Nome do Parceiro 2 -->
      <div>
        <%= f.label :partner_2, "Nome do Parceiro 2", class: "block text-sm font-semibold text-white mb-1" %>
        <%= f.text_field :partner_2, required: true, 
              class: "mt-1 w-full rounded-lg border-gray-300 shadow-md focus:ring-loveRed focus:border-loveRed text-black px-4 py-2" %>
      </div>

      <!-- Botão de Registro -->
      <div class="text-center">
        <%= f.submit "Registrar", 
              class: "bg-loveBlack text-loveRed px-6 py-3 rounded-lg font-bold hover:bg-gray-800 hover:text-white cursor-pointer shadow-lg transition-all transform hover:scale-105" %>
      </div>
    <% end %>

    <!-- Link para Login -->
    <p class="text-center text-gray-300 mt-6">
      Já tem uma conta? 
      <%= link_to "Entrar", new_user_session_path, 
                  class: "text-loveBlack font-bold underline hover:text-red-400 transition-all" %>
    </p>
  </div>
</div>
