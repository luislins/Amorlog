<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center">
  <div class="bg-loveRed p-8 rounded-lg shadow-lg w-full max-w-lg">
    <h2 class="text-3xl font-bold mb-6 text-center">Registrar-se</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-4" do |f| %>
      <%= devise_error_messages! %>

      <!-- Campo para Email -->
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Senha -->
      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium" %>
        <% if @minimum_password_length %>
          <em class="text-gray-300">(mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Confirmação de Senha -->
      <div>
        <%= f.label :password_confirmation, "Confirmação da Senha", class: "block text-sm font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Nome do Parceiro 1 -->
      <div>
        <%= f.label :partner_1, "Nome do Parceiro 1", class: "block text-sm font-medium" %>
        <%= f.text_field :partner_1, required: true, 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Nome do Parceiro 2 -->
      <div>
        <%= f.label :partner_2, "Nome do Parceiro 2", class: "block text-sm font-medium" %>
        <%= f.text_field :partner_2, required: true, 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Botão de Registro -->
      <div class="text-center">
        <%= f.submit "Registrar", 
              class: "bg-loveBlack text-loveRed px-6 py-2 rounded-md font-semibold hover:bg-gray-800 cursor-pointer" %>
      </div>
    <% end %>

    <!-- Link para Login -->
    <p class="text-center text-gray-300 mt-4">
      Já tem uma conta? 
      <%= link_to "Entrar", new_user_session_path, class: "text-loveRed underline" %>
    </p>
  </div>
</div>
