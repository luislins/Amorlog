<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center py-16 px-6">
  <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-lg">
    <!-- Título -->
    <h2 class="text-3xl font-bold text-center text-loveRed mb-6">Registrar-se</h2>

    <!-- Formulário -->
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "space-y-6" do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo para Email -->
      <div class="flex flex-col">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Senha -->
      <div class="flex flex-col">
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-gray-400 mb-1">(Mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Confirmação de Senha -->
      <div class="flex flex-col">
        <%= f.label :password_confirmation, "Confirmação da Senha", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Nome do Parceiro 1 -->
      <div class="flex flex-col">
        <%= f.label :partner_1, "Nome do Parceiro 1", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.text_field :partner_1, required: true, 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Nome do Parceiro 2 -->
      <div class="flex flex-col">
        <%= f.label :partner_2, "Nome do Parceiro 2", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.text_field :partner_2, required: true, 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Botão de Registro -->
      <div class="text-center">
        <%= f.submit "Registrar", 
              class: "bg-loveRed text-white px-6 py-3 rounded-md font-semibold hover:bg-red-600 shadow-lg transition-transform transform hover:scale-105" %>
      </div>
    <% end %>

    <!-- Link para Login -->
    <p class="text-center text-gray-300 mt-6">
      Já tem uma conta? 
      <%= link_to "Entrar", new_user_session_path, 
                  class: "text-loveRed underline hover:text-red-400 transition-all" %>
    </p>
  </div>
</div>
