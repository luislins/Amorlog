<div class="text-white space-y-4">
  <% if controller_name != 'sessions' %>
    <%= link_to "Entrar", new_session_path(resource_name), 
                class: "text-loveRed font-bold underline hover:text-red-600" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registrar", new_registration_path(resource_name), 
                class: "text-loveRed font-bold underline hover:text-green-600" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), 
                class: "text-loveRed font-bold underline hover:text-yellow-600" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), 
                class: "text-loveRed font-bold underline hover:text-blue-600" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), 
                class: "text-loveRed font-bold underline hover:text-purple-600" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
                    data: { turbo: false }, 
                    class: "text-loveRed font-bold underline hover:text-gray-600" %>
    <% end %>
  <% end %>
</div>
