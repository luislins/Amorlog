<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center">
  <div class="bg-loveRed p-8 rounded-lg shadow-lg w-full max-w-lg">
    <h2 class="text-3xl font-bold mb-6 text-center">Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <!-- Campo para Email -->
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Senha -->
      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium" %>
        <%= f.password_field :password, autocomplete: "current-password", 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Lembrar-me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-loveRed border-gray-300 rounded focus:ring-loveRed" %>
          <%= f.label :remember_me, "Lembrar-me", class: "ml-2 text-sm text-gray-300" %>
        </div>
      <% end %>

      <!-- BotÃ£o de Login -->
      <div class="text-center">
        <%= f.submit "Entrar", 
              class: "bg-loveBlack text-loveRed px-6 py-2 rounded-md font-semibold hover:bg-gray-800 cursor-pointer" %>
      </div>
    <% end %>

    <!-- Links de RecuperaÃ§Ã£o e Registro -->
    <div class="text-center text-gray-300 mt-4">
      <% if controller_name != "registrations" %>
        <%= link_to "Registrar-se", new_user_registration_path, class: "text-loveRed underline mr-4" %>
      <% end %>
      <% if controller_name != "passwords" %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-loveRed underline" %>
      <% end %>
    </div>
  </div>
</div>
