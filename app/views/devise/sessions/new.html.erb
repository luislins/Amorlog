<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center py-16 px-6">
  <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-lg">
    <!-- Título -->
    <h2 class="text-3xl font-bold text-center text-loveRed mb-6">Entrar</h2>

    <!-- Formulário -->
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6" do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo para Email -->
      <div class="flex flex-col">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Campo para Senha -->
      <div class="flex flex-col">
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", 
              class: "w-full px-4 py-2 rounded-md border border-gray-600 shadow-sm focus:outline-none focus:ring-2 focus:ring-loveRed focus:border-loveRed text-black" %>
      </div>

      <!-- Lembrar-me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-loveRed border-gray-300 rounded focus:ring-loveRed" %>
          <%= f.label :remember_me, "Lembrar-me", class: "ml-2 text-sm text-gray-300" %>
        </div>
      <% end %>

      <!-- Botão de Login -->
      <div class="text-center">
        <%= f.submit "Entrar", 
              class: "bg-loveRed text-white px-6 py-3 rounded-md font-semibold hover:bg-red-600 shadow-lg transition-transform transform hover:scale-105" %>
      </div>
    <% end %>

    <!-- Links de Recuperação e Registro -->
    <div class="text-center text-gray-300 mt-6">
      <% if controller_name != "registrations" %>
        <%= link_to "Registrar-se", new_user_registration_path, 
                    class: "text-loveRed underline hover:text-red-400 transition-all mr-4" %>
      <% end %>
      <% if controller_name != "passwords" %>
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), 
                    class: "text-loveRed underline hover:text-red-400 transition-all" %>
      <% end %>
    </div>
  </div>
</div>
