<div class="min-h-screen bg-loveBlack text-white flex items-center justify-center px-4">
  <div class="bg-green-700 p-8 rounded-lg shadow-xl w-full max-w-lg">
    <!-- Título -->
    <h1 class="text-3xl font-extrabold mb-8 text-center tracking-wider">Adicionar Nova Meta</h1>
    
    <!-- Formulário -->
    <%= form_with model: [@couple, @goal], local: true, class: "space-y-8" do |form| %>
      <!-- Título da Meta -->
      <div>
        <%= form.label :title, "Título da Meta", class: "block text-base font-semibold text-white mb-2" %>
        <%= form.text_field :title, 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-green-900 focus:border-green-900 bg-white text-black px-4 py-2 text-sm" %>
      </div>

      <!-- Descrição -->
      <div>
        <%= form.label :description, "Descrição", class: "block text-base font-semibold text-white mb-2" %>
        <%= form.text_area :description, rows: 4, 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-green-900 focus:border-green-900 bg-white text-black px-4 py-2 text-sm" %>
      </div>

      <!-- Data Limite -->
      <div>
        <%= form.label :due_date, "Data Limite", class: "block text-base font-semibold text-white mb-2" %>
        <%= form.date_field :due_date, 
              class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-green-900 focus:border-green-900 bg-white text-black px-4 py-2 text-sm" %>
      </div>

      <!-- Botão de Salvar -->
      <div class="text-center">
        <%= form.submit "Salvar Meta", 
              class: "bg-loveBlack text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
