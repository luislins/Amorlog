<div class="goal-meter bg-gray-800 p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-center text-white mb-4">
    Meta de Dinheiro
  </h2>
  <div class="meter-wrapper relative h-8 bg-gray-700 rounded-full overflow-hidden shadow-inner">
    <div class="meter-bar bg-loveRed h-full transition-all duration-300" style="width: <%= (@savings_table.current_value.to_f / @savings_table.max_value * 100).round(2) %>%"></div>
  </div>
  <div class="flex justify-between mt-2 text-gray-300 text-sm">
    <span>R$ <%= @savings_table.current_value %></span>
    <span>Falta: R$ <%= @savings_table.max_value - @savings_table.current_value %></span>
    <span>R$ <%= @savings_table.max_value %></span>
  </div>
</div>
